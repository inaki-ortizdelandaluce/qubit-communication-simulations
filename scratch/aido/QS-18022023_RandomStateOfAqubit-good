from qiskit.quantum_info import random_statevector, Statevector
from qiskit import QuantumCircuit
import numpy as np

vec = random_statevector(2)
# vec = Statevector([1, 0])
print('before circuit: {}'.format(vec)) 

qc = QuantumCircuit(1)
qc.x(0)
qc.draw()

new_vec = vec.evolve(qc)
print('after circuit: {}'.format(new_vec)) # for drawing circuit itÂ´s better to not include lines 13 and 14.add at the end.
#In this example the dimension of state vector is 2, so the quantum circuit = 1 qubit. funciona ok




from qiskit.quantum_info import random_statevector, Statevector
from qiskit import QuantumCircuit
import numpy as np

vec = random_statevector(4)
# vec = Statevector([1, 0])
print('before circuit: {}'.format(vec)) 

qc = QuantumCircuit(2)
qc.x(0)
qc.x(1)
qc.draw()
#In this example the dimension of state vector is 4, so the quantum circuit = 2 qubit. works ok





from qiskit.quantum_info import random_statevector, Statevector
from qiskit import QuantumCircuit
import numpy as np

vec = random_statevector(6)
# vec = Statevector([1, 0])
print('before circuit: {}'.format(vec)) 

qc = QuantumCircuit(3)
qc.x(0)
qc.x(1)
qc.x(2)
qc.draw()
#In this example the dimension of state vector is 6, so the quantum circuit = 3 qubit. works ok

